<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardMainBill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_bill_width"
    android:layout_height="@dimen/card_bill_height"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/bill_card_color"
    card_view:cardCornerRadius="@dimen/card_bill_radius"
    card_view:cardElevation="@dimen/card_bill_elevation">

    <LinearLayout
        android:id="@+id/linearMainBill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/billLetterIcon"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_width="@dimen/letter_icon_size"
            android:layout_height="@dimen/letter_icon_size" />

        <TextView
            android:id="@+id/textViewBillName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_bill_text_size"
            tools:text="Карта" />

        <TextView
            android:id="@+id/textViewBillAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/small_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_bill_text_size"
            tools:text="5000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>