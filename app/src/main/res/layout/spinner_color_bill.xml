<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView android:id="@+id/card_spinner_color_bill"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_color_bill_height"
        android:layout_margin="@dimen/item_color_bill_margin"
        android:background="?attr/selectableItemBackground"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/item_color_bill_card_corner_radius"
        card_view:cardElevation="@dimen/item_color_bill_card_elevation" />

</LinearLayout>